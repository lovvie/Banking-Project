@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h4 class="text-primary">Customer List</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary"> 
                <i class="bi bi-person-plus"></i> &nbsp; Create New Customer
            </a>
        </div>
    </div>
</div>
</br>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email Address
            </th>
            <th>
                Address
            </th>
            <th>
                Landmark
            </th>
            <th>
                City
            </th>
            <th>
                Country
            </th>
            <th>
                Mobile
            </th>
            <th>
                Date Created
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model){
            <tr>
                <td width="30%">
                    @obj.CustomerName
                </td>
                <td width="30%">
                    @obj.EmailAddress
                </td>
                <td width="30%">
                    @obj.Address
                </td>
                <td width="30%">
                    @obj.Landmark
                </td>
                <td width ="30%">
                    @obj.City
                </td>
                <td width="30%">
                    @obj.Country
                </td>
                <td width="30%">
                    @obj.Mobile
                </td>
                <td width="30%">
                    @obj.CreatedDateTime
                </td>
                <td width="30%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Customer" asp-action="Edit" asp-route-customerId="@obj.CustomerId" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                    </div>
                </td>
                <td width="30%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Customer" asp-action="Delete" asp-route-customerId="@obj.CustomerId" class="btn btn-dark"><i class="bi bi-trash"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

